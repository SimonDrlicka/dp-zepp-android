<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Server not running"
        android:textSize="16sp"
        android:paddingBottom="12dp"/>
    <TextView
        android:id="@+id/inRangeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="in range: false"
        android:textSize="18sp"
        android:paddingBottom="12dp"/>

    <TextView
        android:id="@+id/modeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mode: waiting"
        android:textSize="18sp"
        android:paddingBottom="12dp"/>

    <TextView
        android:id="@+id/pointsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blue: 0 | Red: 0"
        android:textSize="18sp"
        android:paddingBottom="12dp"/>

    <TextView
        android:id="@+id/gyroLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gyroscope (gx, gy, gz)"
        android:textSize="14sp"
        android:paddingBottom="6dp"/>

    <com.example.zepp_gestures.GraphView
        android:id="@+id/gyroGraph"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:paddingBottom="12dp"/>

    <TextView
        android:id="@+id/gyroTsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ts: -"
        android:textSize="12sp"
        android:paddingBottom="12dp"/>

    <TextView
        android:id="@+id/accelLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accelerometer (ax, ay, az)"
        android:textSize="14sp"
        android:paddingBottom="6dp"/>

    <Spinner
        android:id="@+id/poseSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"/>

    <com.example.zepp_gestures.GraphView
        android:id="@+id/accelGraph"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:paddingBottom="12dp"/>

    <TextView
        android:id="@+id/accelTsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ts: -"
        android:textSize="12sp"
        android:paddingBottom="12dp"/>
    <LinearLayout
        android:id="@+id/serverButtonRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/startBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start server"/>

        <Button
            android:id="@+id/stopBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Stop server"/>
    </LinearLayout>

    <Button
        android:id="@+id/exportBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Export CSV"
        android:layout_marginTop="8dp"/>
</LinearLayout>
